{
  "name": "pocketbase-installer",
  "version": "0.0.0",
  "description": "Install pocketbase easily using npx!",
  "keywords": [
    "pocketbase",
    "installer",
    "cli"
  ],
  "homepage": "https://github.com/ericc-ch/pocketbase-installer",
  "bugs": "https://github.com/ericc-ch/pocketbase-installer/issues",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ericc-ch/pocketbase-installer.git"
  },
  "author": "Erick Christian <erickchristian48@gmail.com>",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/main.d.ts",
      "default": "./dist/main.js"
    }
  },
  "bin": {
    "pocketbase-installer": "./dist/cli.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "lint": "eslint .",
    "prepack": "pnpm run build",
    "prepare": "simple-git-hooks",
    "release": "bumpp && pnpm publish --access public",
    "start": "tsx src/cli.ts",
    "test": "vitest",
    "typecheck": "tsc --noEmit"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm exec lint-staged"
  },
  "lint-staged": {
    "*": "pnpm run lint --fix"
  },
  "dependencies": {
    "citty": "^0.1.6",
    "consola": "^3.4.0",
    "tinyexec": "^0.3.2"
  },
  "devDependencies": {
    "@echristian/eslint-config": "^0.0.28",
    "@types/node": "^22.13.9",
    "bumpp": "^10.0.3",
    "eslint": "^9.21.0",
    "jiti": "^2.4.2",
    "lint-staged": "^15.4.3",
    "simple-git-hooks": "^2.11.1",
    "tsup": "^8.4.0",
    "tsx": "^4.19.3",
    "typescript": "^5.8.2",
    "vitest": "^3.0.7"
  },
  "packageManager": "pnpm@10.5.2",
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild",
      "simple-git-hooks"
    ]
  }
}
